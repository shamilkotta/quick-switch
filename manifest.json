{
  "manifest_version": 3,
  "name": "Quick Switch - Tab Search",
  "version": "1.0.0",
  "description": "Quick tab search for Chrome. Press Cmd+Shift+P to search and switch between open tabs.",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/quick-switch.png",
    "default_title": "Quick Switch - Search Tabs"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Open tab search"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/quick-switch.png",
    "48": "icons/quick-switch.png",
    "128": "icons/quick-switch.png"
  }
}
